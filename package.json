{
    "name": "lrc-player",
    "version": "1.0.0",
    "description": "A simple desktop lrc-player",
    "main": "main.js",
    "type": "commonjs",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder build --win --mac --linux",
        "build:win": "electron-builder build --win",
        "build:mac": "electron-builder build --mac",
        "build:linux": "electron-builder build --linux"
    },
    "author": "yuygfgg",
    "license": "GPL-3.0-only",
    "devDependencies": {
        "electron": "^25.0.0",
        "electron-builder": "^24.6.0"
    },
    "dependencies": {
        "music-metadata": "^8.1.0"
    },
    "build": {
        "appId": "com.yuygfgg.lrc-player",
        "productName": "lrc-player",
        "copyright": "Copyright yuygfgg Â© 2025",
        "mac": {
            "category": "public.app-category.music",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "category": "Audio;AudioVideo;Player"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}